{
  "name": "openglove-ui",
  "description": "OpenGloves UI",
  "main": "main.js",
  "author": "Danwillm",
  "license": "MIT",
  "private": false,
  "nodeGypRebuild": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LucidVR/opengloves-ui"
  },
  "bugs": {
    "url": "https://github.com/LucidVR/opengloves-ui/issues"
  },
  "scripts": {
    "rollup-build": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "start": "sirv public",
    "start-tauri": "wait-on http://localhost:5000 && yarn tauri dev",
    "dev": "concurrently \"yarn run rollup-dev\" \"yarn run start-tauri\"",
    "package": "electron-packager . OpenGloves UI --platform=win32 --arch=x64",
    "build": "yarn run rollup-build && yarn tauri build"
  },
  "dependencies": {
    "@rollup/plugin-inject": "^4.0.2",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/jit": "^0.1.18",
    "@tauri-apps/api": "^1.0.0-beta.4",
    "@tauri-apps/cli": "^1.0.0-beta.4",
    "autoprefixer": "^10.2.5",
    "buffer": "^6.0.3",
    "comment-json": "^4.1.0",
    "hjson": "https://github.com/danwillm/hjson-js",
    "path": "^0.12.7",
    "postcss": "8.3.0",
    "postcss-load-config": "^3.0.1",
    "postcss-nesting": "^8.0.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "svelte-loading-spinners": "^0.1.6",
    "svelte-preprocess": "^4.7.3",
    "tailwindcss": "^2.1.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "concurrently": "^6.1.0",
    "rollup": "^2.48.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "svelte": "^3.38.2",
    "wait-on": "^5.3.0"
  }
}
