{
  "name": "openglove-ui",
  "description": "OpenGloves UI",
  "main": "main.js",
  "author": "Danwillm",
  "license": "MIT",
  "private": false,
  "nodeGypRebuild": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
