{
  "package": {
    "productName": "openglove-ui",
    "version": "0.0.3"
  },
  "build": {
    "distDir": "../public",
    "devPath": "http://localhost:5000",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.danwillm.opengloveui",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [
        "sidecar"
      ],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": false,
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true
      },
      "process": {
        "relaunch": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "sidecar",
            "sidecar": true
          }
        ],
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:18080/*"
        ]
      },
      "window": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "OpenGloves UI",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    }
  }
}
